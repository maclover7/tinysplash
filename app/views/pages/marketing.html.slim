- content_for :body_class, "marketing"

section class="section section--hero section--full-screen hero--home"
  div
    = image_tag "tinysplash-logo.svg", alt: t("home.company_name")
    h5 = t("home.company_motto")
    p class="margin-top"
      = t("home.company_selling_point")

    div class="marketing-form"
      = simple_form_for :guest,
        url: "https://formkeep.com/f/6a792507ced8",
        method: "post" do |form|
        = form.input :email,
          placeholder: "user@example.com",
          wrapper: false,
          label: false
        = form.submit class: "button", value: t("buttons.sign_up")

    div class="bottom-browser"
